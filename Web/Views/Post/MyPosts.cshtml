@model IEnumerable<Model.Models.Post>

@{
    ViewData["Title"] = "MyPosts";
}

<h2>MyPosts</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostLikes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shares)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostLikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shares)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
        </tr>
}
    </tbody>
</table>
